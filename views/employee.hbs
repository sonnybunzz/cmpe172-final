
<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
      <h1>{{title}}</h1>
      {{#if userinfo}}
        <div>
          Signed in as {{userinfo.name}}
        </div>
      {{/if}}
      {{#if userinfo}}
        <a href="/logout">Sign out</a>
      {{else}}
        <a href="/login">Sign in</a>
      {{/if}}
    </header>
    <main>
      <table border="1" cellpadding="7" cellspacing="7">
        <thead>
          <th width="50px">Employee Number</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Hire Date</th>
        </thead>
        <tbody>
          {{#each data}}
          <tr>
            <td>{{emp_no}}</td>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>{{hire_date}}</td>
          </tr>
          {{/each}}
        </tbody>

    </main>
  </body>
</html>